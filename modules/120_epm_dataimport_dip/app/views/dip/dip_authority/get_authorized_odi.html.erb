<%= datatable_view({:count => @count, :datas => @datas}) do |builder| %>
    <% builder.column(:id, {:title => "<input type=\"checkbox\" id=\"selectAll6\"/>"+t(:selectAll), :width => "30px"}) do |data| %>
        <% if data[:target]==@targetId %>
            <input type="checkbox" name="valueIds6" value="<%= data[:id] %>"/>
        <% else %>
            <%= ""%>
        <% end %>
    <% end %>
    <% builder.column(:function, {:title => t(:name), :width => "180px"}) do |d| %>
        <%= Dip::OdiInterface.find(d.function).interface_name %>
    <% end %>
    <% builder.column(:updated_by, {:title => t(:updated_by), :width => "180px"}) do |data| %>
        <%= get_username(data[:updated_by]) %>
    <% end %>
    <% builder.column(:updated_at, {:title => t(:updated_at), :width => "140px"}) %>
<% end %>
<script type="text/javascript">
    $(document).ready(function () {
        $("#selectAll6").bind("click", function () {
            if ($("#selectAll6")[0].checked) {
                var checkboxes = $("input[name='valueIds6']").toArray()
                for (var checkbox in checkboxes) {
                    checkboxes[checkbox].checked = true;
                }
            } else {
                var checkboxes = $("input[name='valueIds6']").toArray()
                for (var checkbox in checkboxes) {
                    checkboxes[checkbox].checked = false;
                }
            }
        });
    });
</script>
