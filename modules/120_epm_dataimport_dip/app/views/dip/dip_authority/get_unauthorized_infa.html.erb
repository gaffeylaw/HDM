<%= datatable_view({:count => @count, :datas => @datas}) do |builder| %>
    <% builder.column(:id, {:title => "<input type=\"checkbox\" id=\"selectAll21\"/>"+t(:selectAll), :width => "30px"}) do |data| %>
        <input type="checkbox" name="valueIds21" value="<%= data[:id] %>"/>
    <% end %>
    <% builder.column(:name_alias, {:title => t(:name), :width => "180px", :searchable => true}) %>
    <% builder.column(:updated_by, {:title => t(:updated_by), :width => "180px"}) do |data| %>
        <%= get_username(data[:updated_by]) %>
    <% end %>
    <% builder.column(:updated_at, {:title => t(:updated_at), :width => "140px"}) %>
<% end %>
<script type="text/javascript">
    $(document).ready(function () {
        $("#selectAll21").bind("click", function () {
            if ($("#selectAll21")[0].checked) {
                var checkboxes = $("input[name='valueIds21']").toArray()
                for (var checkbox in checkboxes) {
                    checkboxes[checkbox].checked = true;
                }
            } else {
                var checkboxes = $("input[name='valueIds21']").toArray()
                for (var checkbox in checkboxes) {
                    checkboxes[checkbox].checked = false;
                }
            }
        });
    });
</script>
