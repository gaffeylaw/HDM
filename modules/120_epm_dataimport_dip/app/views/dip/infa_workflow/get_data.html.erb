<%= datatable_view({:count => @count, :datas => @datas}) do |builder| %>
    <% builder.column(:id, {:title => "<input type=\"checkbox\" id=\"selectAll\"/>"+t(:selectAll), :width => "30px"}) do |data| %>
        <input type="checkbox" name="valueIds" value="<%= data[:id] %>"/>
    <% end %>
    <% builder.column(:operation, {:title => t(:operation), :width => "30px"}) do |data| %>
        <a href="javascript:void(0)" onclick="show_edit_wnd(event,'<%= data.to_json%>')"><%= t(:edit) %></a>
    <% end %>
    <% builder.column(:folder_name, {:title => t(:label_infa_folder_name), :width => "180px"}) %>
    <% builder.column(:name_alias, {:title => t(:label_infa_workflow_name_alias), :width => "180px", :searchable => true}) %>
    <% builder.column(:name, {:title => t(:label_infa_workflow_name), :width => "180px", :searchable => true}) %>
    <% builder.column(:updated_by, {:title => t(:updated_by), :width => "120px"}) do |data| %>
        <%= get_username(data[:updated_by]) %>
    <% end %>
    <% builder.column(:updated_at, {:title => t(:updated_at), :width => "120px"}) %>
<% end %>
<script type="text/javascript">
    $(document).ready(function () {
        $("#selectAll").bind("click", function () {
            if ($("#selectAll")[0].checked) {
                var checkboxes = $("input[name='valueIds']").toArray()
                for (var checkbox in checkboxes) {
                    checkboxes[checkbox].checked = true;
                }
            } else {
                var checkboxes = $("input[name='valueIds']").toArray()
                for (var checkbox in checkboxes) {
                    checkboxes[checkbox].checked = false;
                }
            }
        });
    });
</script>