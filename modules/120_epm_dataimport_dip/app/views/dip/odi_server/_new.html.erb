<div class="modal hide" id="new_modal">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal">Ã—</button>
    <h3><%= t(:new) %></h3>
  </div>
  <div class="modal-body">
    <table class="detail-list" cellpadding="0" cellspacing="0" border="0">
      <tbody>
      <tr>
        <td class="label-col"><label><%= t(:label_odi_server_name) %></label></td>
        <td class="data-col"><input type="text" id="server_name_new"/></td>
      </tr>
      <tr>
        <td class="label-col"><label><%= t(:label_odi_server_desc) %></label></td>
        <td class="data-col"><input type="text" id="server_desc_new"/></td>
      </tr>
      <tr>
        <td class="label-col"><label><%= t(:label_odi_server_url) %></label></td>
        <td class="data-col"><input type="text" id="url_new"/></td>
      </tr>
      <tr>
        <td class="label-col"><label><%= t(:label_odi_server_workspace) %></label></td>
        <td class="data-col"><input type="text" id="workspace_new"/></td>
      </tr>
      <tr>
        <td class="label-col"><label><%= t(:label_odi_server_odi_user) %></label></td>
        <td class="data-col"><input type="text" id="odi_user_new"/></td>
      </tr>
      <tr>
        <td class="label-col"><label><%= t(:label_odi_server_odi_password) %></label></td>
        <td class="data-col"><input type="password" id="odi_pwd_new"/></td>
      </tr>
      </tbody>
    </table>
  </div>
  <div class="modal-footer">
    <button type="submit" class="btn btn-primary" onclick="add_server(event)"><%= t(:save) %></button>
    <button type="submit" class="btn" data-dismiss="modal"><%= t(:close) %></button>
  </div>
</div>