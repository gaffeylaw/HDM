<%= common_title %>
<div class="page-block">

  <div class="page-block-body">
    <div class="sub-page-block">
      <div class="sub-page-block-header">
        <h3 class="sub-page-block-title"></h3>
        <div id="searchBox" class="page-block-help"></div>
      </div>
      <div class="sub-page-block-body">
        <%= datatable("data_area", {:action => "get_data"},
                      [],
                      {:search_box => "searchBox", :paginator_box => "paginator", :scroll => {:mode => "xy"}}) %>
      </div>
    </div>
  </div>
  <table class="page-block-footer">
    <tr>
      <td class="page-block-title">
      </td>
    </tr>
  </table>
</div>
<script>
    $("document").ready(function () {
        setInterval(function () {
            var current_target = $("#data_area").data("datatable").target;
            current_target.load();
        }, 10000);
    });
</script>


