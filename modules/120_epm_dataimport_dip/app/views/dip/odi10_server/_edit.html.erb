<div class="modal hide" id="edit_modal">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal">Ã—</button>
    <h3><%= t(:edit) %></h3>
  </div>
  <div class="modal-body">
    <input type="hidden" id="id_edit"/>
    <table class="form-table" cellpadding="0" cellspacing="0" border="0">
      <tbody>
      <tr>
        <td class="label-col"><label><%= t(:label_odi_server_name) %></label></td>
        <td class="data-col"><input type="text" id="server_name_edit"/></td>
      </tr>
      <tr>
        <td class="label-col"><label><%= t(:label_odi_server_url) %></label></td>
        <td class="data-col"><input type="text" id="service_url_edit"/></td>
      </tr>
      <tr>
        <td class="label-col"><label><%= t(:label_odi_server_jdbc_driver) %></label></td>
        <td class="data-col"><input type="text" id="jdbc_driver_edit"/></td>
      </tr>
      <tr>
        <td class="label-col"><label><%= t(:label_odi_server_jdbc_url) %></label></td>
        <td class="data-col"><input type="text" id="jdbc_url_edit"/></td>
      </tr>
      <tr>
        <td class="label-col"><label><%= t(:label_odi_server_jdbc_user) %></label></td>
        <td class="data-col"><input type="text" id="jdbc_user_edit"/></td>
      </tr>
      <tr>
        <td class="label-col"><label><%= t(:label_odi_server_jdbc_password) %></label></td>
        <td class="data-col"><input type="password" id="jdbc_password_edit"/></td>
      </tr>
      <tr>
        <td class="label-col"><label><%= t(:label_odi_server_work_repository) %></label></td>
        <td class="data-col"><input type="text" id="work_repository_edit"/></td>
      </tr>
      <tr>
        <td class="label-col"><label><%= t(:label_odi_server_agent_host) %></label></td>
        <td class="data-col"><input type="text" id="agent_host_edit"/></td>
      </tr>
      <tr>
        <td class="label-col"><label><%= t(:label_odi_server_agent_port) %></label></td>
        <td class="data-col"><input type="text" id="agent_port_edit"/></td>
      </tr>
      <tr>
        <td class="label-col"><label><%= t(:label_odi_server_odi_user) %></label></td>
        <td class="data-col"><input type="text" id="odi_user_edit"/></td>
      </tr>
      <tr>
        <td class="label-col"><label><%= t(:label_odi_server_odi_password) %></label></td>
        <td class="data-col"><input type="password" id="odi_password_edit"/></td>
      </tr>
      </tbody>
    </table>

  </div>
  <div class="modal-footer">
    <button type="submit" class="btn btn-primary" onclick="edit_server(event)"><%= t(:save) %></button>
    <button type="submit" class="btn" data-dismiss="modal"><%= t(:close) %></button>
  </div>
</div>