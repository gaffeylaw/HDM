<%= setting_title %>
<!--页面结构-->
<div class="page-block">
  <table class="page-block-header"><tr>
    <td class="page-block-title">
      <h2 class="block-title"><%= t(:label_irm_mail_template_list) %></h2>
    </td>
    <td class="page-block-button">
      <%= link_to t(:new), { :action => "new"},:class=>"btn"%>
    </td>
    <td class="page-block-help">
      <div id="mailTemplateSearchBox"></div>
    </td>
  </tr></table>
  <div class="page-block-body">
    <div id="mail_template"></div>
    <%= datatable("mail_template",{:action=>"get_data",:format=>"json"},[],{:paginator_box=>"mailTemplatePaginatorBox",:search_box=>"mailTemplateSearchBox"})%>
    <div id="mailTemplatePaginatorBox"></div>
  </div>
</div>
