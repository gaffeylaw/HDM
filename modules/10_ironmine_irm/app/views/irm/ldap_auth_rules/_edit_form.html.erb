<%= common_title %>
<%= form_for(@ldap_auth_rule,:url=>{:action=>"update"},:builder => CustomFormBuilder) do |f| %>
    <% content_for :form_block_common do%>
        <table class="filter-table">
          <thead>
          <tr>
            <td class="num-col">&nbsp;</td>
            <td class="field-col"><%= t(:irm_filter_criterions_column_code)%></td>
            <td class="operator-col"><%=t(:irm_filter_criterions_operator_code)%></td>
            <td class="field-col"><%=t(:irm_filter_criterions_filter_value)%></td>
            <td class="value-col"><%=t(:ldap_auth_header_template_person)%></td>
          </tr>
          </thead>
          <tbody>
          <tr>
            <td class="num-col"></td>
            <td class="field-col">
              <%= f.text_field :attr_field, :required => true %>
            </td>
            <td class="operator-col">
              <%= f.blank_select :operator_code,filter_operators,:required => true %>
            </td>
            <td class="value-col">
              <%= f.text_field :attr_value, :required => true %>
            </td>
            <td>
              <%=f.blank_select :template_person_id,available_template_people,{},:required=>true%>
            </td>
          </tr>
          </tbody>
        </table>
    <% end %>
    <% content_for :form_buttons  do %>
        <%= link_submit t(:save),{:class=>"btn btn-primary"}%>
        <%= link_back t(:cancel),{},{:class=>"btn cancel"}%>
    <% end %>
    <!--页面结构-->
    <div class="page-block">
      <table class="page-block-header"><tr>
        <td class="page-block-title">
          <h2 class="block-title"><%=t(:label_irm_ldap_auth_rule_edit)%></h2>
        </td>
        <td class="page-block-button">
          <%= content_for :form_buttons %>
        </td>
      </tr></table>
      <div class="page-block-body">
        <%= error_for @ldap_auth_rule %>
        <div class="sub-page-block">
          <div class="sub-page-block-header">
            <%= form_require_info %>
            <h3 class="sub-page-block-title"><%= t(:label_common_info) %></h3>
          </div>
          <div class="sub-page-block-body">
            <%= content_for :form_block_common %>
          </div>
        </div>

      </div>

      <table class="page-block-footer"><tr>
        <td class="page-block-title">
        </td>
        <td class="page-block-button">
          <%= content_for :form_buttons   %>
        </td>
      </tr></table>
    </div>
<% end %>
