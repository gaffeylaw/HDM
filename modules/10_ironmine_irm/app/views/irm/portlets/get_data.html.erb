<%=datatable_view({:count=>@count,:datas=>@datas}) do |builder|%>
  <% builder.column(:id,{:title=>t(:operation), :width => "80px"}) do |data|%>
    <%= link_to(t(:edit),{:action=>"edit",:id=>data[:id]}) %>&nbsp;
    <%= link_to(t(:show),{:action=>"show",:id=>data[:id]}) %>
  <% end %>
  <% builder.column(:code,{:title=>t(:label_irm_tab_code)})%>
  <% builder.column(:name,{:title=>t(:label_irm_tab_name)})%>
  <% builder.column(:page_controller,{:title=>t(:label_irm_portlet_controller)})%>
  <% builder.column(:page_action,{:title=>t(:label_irm_portlet_action)})%>
  <% builder.column(:description,{:title=>t(:label_irm_tab_description),:width=>"250px"})%>
<% end %>