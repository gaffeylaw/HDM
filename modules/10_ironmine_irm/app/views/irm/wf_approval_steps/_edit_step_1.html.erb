<%= form_for(@wf_approval_step,:url=>{:action=>"edit"},:builder => CustomFormBuilder) do |f| %>


  <% content_for :form_block_a   do%>
    <%= f.hidden_field(:step) %>
    <table class="form-table">
      <tbody>
        <tr>
          <td class="label-col"><label for="wf_approval_step_name"><%=t(:label_irm_wf_approval_step_name)%></label></td>
          <td class="data-col"><%=f.text_field :name, :required=>true ,:id=>"wf_approval_step_name"%></td>
          <td class="label-col empty">&nbsp;</td>
          <td class="data-col empty">&nbsp;</td>
        </tr>
        <tr>
          <td class="label-col"><label for="wf_approval_step_step_code"><%=t(:label_irm_wf_approval_step_step_code)%></label></td>
          <td class="data-col"><%=f.text_field :step_code, :required=>true ,:irm_uppercase=>true,:id=>"wf_approval_step_step_code"%></td>
          <td class="label-col empty">&nbsp;</td>
          <td class="data-col empty">&nbsp;</td>
        </tr>
        <tr>
          <td class="label-col"><label for="wf_approval_step_description"><%=t(:label_irm_wf_approval_step_description)%></label></td>
          <td class="data-col" colspan="3" width="82%"><%=f.text_area :description, :cols=>60,:rows=>5,:id=>"wf_approval_step_description"%></td>
        </tr>
        <tr>
          <td class="label-col"><label for="wf_approval_step_step_number"><%=t(:label_irm_wf_approval_step_step_number)%></label></td>
          <td class="data-col"><%=f.text_field :step_number,:value=>@wf_approval_step.init_step_number, :required=>true ,:size=>3,:id=>"wf_approval_step_step_number"%></td>
          <td class="label-col empty">&nbsp;</td>
          <td class="data-col empty">&nbsp;</td>
        </tr>
      </tbody>
    </table>
  <% end %>

  <% content_for :form_buttons  do %>
        <%= link_to t(:next), {:action => "edit"},{:class=>"submit btn"} %>
        <%= link_back t(:cancel), {},:class=>"btn" %>
  <% end %>



    <!--页面结构-->
    <div class="page-block">
      <table class="page-block-header"><tr>
        <td class="page-block-title">
          <h2 class="block-title">
            <%= t(:step_n, :n => "1") %><%= t(:label_common_info) %>
          </h2>
        </td>
        <td class="page-block-button">
          <%= content_for :form_buttons   %>

        </td>
        <td class="page-block-help">
          <h2 class="block-title"><%= t(:step_n_total_m, :n => "1", :m => "3") %></h2>
        </td>
      </tr></table>
      <div class="page-block-body">
        <%= error_for @wf_approval_step%>
        <div class="sub-page-block">
          <div class="sub-page-block-header">
            <%= form_require_info %>
            <h3 class="sub-page-block-title"><%= t(:label_common_info) %></h3>
          </div>
          <div class="sub-page-block-body">
            <%= content_for :form_block_a   %>
          </div>
        </div>
      </div>

      <table class="page-block-footer"><tr>
        <td class="page-block-title">
        </td>
        <td class="page-block-button">
          <%= content_for :form_buttons   %>
        </td>
      </tr></table>
    </div>

<% end %>

