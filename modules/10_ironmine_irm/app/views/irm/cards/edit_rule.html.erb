<%= common_title(:show_data=>@card[:name]) %>
<%= form_for(@card,:url=>{:action=>"update_rule"},:builder => CustomFormBuilder) do |f| %>
  <%= f.hidden_field :return_url, :value => @return_url %>
  <% content_for :form_buttons  do %>
    <%= link_submit t(:save), :class=>"btn btn-primary" %>
        <% if !@return_url.present? %>
          <%= link_to t(:cancel), {:action => "index"}, {:class => "btn cancel"}%>
        <% else %>
          <%= link_to t(:cancel), @return_url, {:class => "btn cancel"}%>
        <% end %>
  <% end %>

  <!--页面结构-->
  <div class="page-block">
    <table class="page-block-header">
      <tr>
          <td class="page-block-title">
            <h2 class="block-title"><%=t(:label_irm_card_rule_edit)%></h2>
          </td>
          <td class="page-block-button">
            <%= content_for :form_buttons   %>
          </td>
        </tr>
    </table>
    <div class="page-block-body">
      <div class="sub-page-block">
        <!-- 卡片规则 -->
        <div class="sub-page-block-header">
          <h3 class="sub-page-block-title"><%= t(:label_irm_card_rule) %></h3>
        </div>
        <% if @rule_filter %>
          <%= render "rule_filter" %>
        <% end %>
      </div>
    </div>
    <table class="page-block-footer">
      <tr>
        <td class="page-block-title"></td>
        <td class="page-block-button">
          <%= content_for :form_buttons   %>
        </td>
      </tr>
    </table>
  </div>
<% end %>