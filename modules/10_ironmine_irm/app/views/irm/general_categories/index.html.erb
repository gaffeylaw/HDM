<%= setting_title %>
<div class="listRelatedObject setupBlock">
    <div class="page-block">
      <div class="pbHeader">
        <table cellpadding="0" cellspacing="0" border="0">
          <tbody>
            <tr>
              <td class="pbTitle"><h2 class="mainTitle"><%= t(:label_irm_general_category_list) %></h2></td>
              <td id="topButtonRow" class="pbButton">
                <div class="button"><%= link_to t(:new), {:action => "new"}%></div>
              </td>
              <td class="pbHelp">
                <div id="genCateSearchBox"></div>
              </td>
            </tr>
          </tbody>
        </table>
      </div>
      <div class="pbBody">
        <div id="general_categories_list" class="datatable" style="width:100%">
          <div id="id" style="display:none">
            <%= link_to(t(:edit),{:action=>"edit",:id=>"{id}"}) %>&nbsp;
            <%= link_to(t(:show),{:action=>"show",:id=>"{id}"}) %>
          </div>
          <div id="status_code" style="display:none">
            <%= check_img("{status_code}") %>
          </div>                  
        </div>
        <%= datatable("general_categories_list",{:action=>"get_data",:format=>"json"},
                      [{:key=>"id",:label=>t(:operation),:formatter=>"Y.irm.template",:width=>"80px"},
                       {:key=>"category_type_name",:label=>t(:label_irm_general_category_type),:searchable=>true},
                       {:key=>"segment1_name",:label=>t(:label_irm_general_category_segment1),:searchable=>true},
                       {:key=>"segment2_name",:label=>t(:label_irm_general_category_segment2),:searchable=>true},
                       {:key=>"segment3_name",:label=>t(:label_irm_general_category_segment3),:searchable=>true},
                       {:key=>"concat_segment_name",:label=>t(:label_irm_general_category_concact_segment),:searchable=>true},
                       {:key=>"status_code",:label=>t(:label_irm_permission_status_code),:formatter=>"Y.irm.template", :width => "40px"}],
                       {:search_box=>"genCateSearchBox",:paginator_box=>"generalCategoryPaginator"})%>
        <div id="generalCategoryPaginator"></div>
      </div>
    </div>
</div>
