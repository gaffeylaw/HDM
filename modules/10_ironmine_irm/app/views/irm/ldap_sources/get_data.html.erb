<%=datatable_view({:count=>@count,:datas=>@datas}) do |builder|%>
  <% builder.column(:id,{:title=>t(:operation), :width => "80px"}) do |data|%>
    <%= link_to(t(:edit),{:action=>"edit",:id=>data[:id]},:class => "action-link") %>&nbsp;|
    <%= link_to(t(:show),{:action=>"show",:id=>data[:id]},:class => "action-link") %>
  <% end %>
  <% builder.column(:name,{:title=>t(:label_irm_ldap_source_name), :searchable => true})%>
  <% builder.column(:host,{:title=>t(:label_irm_ldap_source_host), :searchable => true})%>
  <% builder.column(:port,{:title=>t(:label_irm_ldap_source_port)})%>
  <% builder.column(:base_dn,{:title=>t(:label_irm_ldap_source_base_dn)})%>
  <% builder.column(:status_code,{:title=>t(:active),:width=>"40px"}) do |data|%>
    <%= check_img(data[:status_code]) %>
  <% end %>
<% end %>