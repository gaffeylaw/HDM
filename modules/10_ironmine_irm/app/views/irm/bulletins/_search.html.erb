<!--页面结构-->
<div class="page-block">
  <table class="page-block-header">
    <tr>
      <td class="page-block-title">
        <h2 class="block-title"><%= t(:label_irm_bulletin_list) %></h2>
      </td>
    </tr>
  </table>
  <div class="page-block-body">
    <div class="datatable">
      <table id='rows'>
        <thead>
          <tr>
            <th >
              <div><%= t(:label_irm_bulletin_title) %>
              </div>
            </th>
            <th style="width:180px;">
              <div ><%= t(:label_irm_bulletin_page_views) %>
              </div>
            </th>
            <th style="width:180px;">
              <div ><%= t(:label_irm_bulletin_published_date) %>
              </div>
            </th>
          </tr>
        </thead>
        <tbody >
        <% results.each do |r| %>
        <tr id="<%=r.id%>" >
          <td >
            <div>
                <%= link_to(r[:bulletin_title], {:controller => "irm/bulletins", :action => "show", :id => r[:id]})%>
             </div>
          </td>
          <td >
            <div>
              <%= r[:page_views] %>
            </div>
          </td>
          <td >
            <div >
              <%= r[:published_date]%>
            </div>
          </td>
        </tr>
        <% end -%>
        </tbody>
      </table>
    </div>
  </div>
</div>
