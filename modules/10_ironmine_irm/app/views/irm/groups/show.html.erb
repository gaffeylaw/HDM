<%= common_title(:show_data=>@group[:name]) %>

<!--页面结构-->
<div class="show-block">
  <!-- 人员信息 -->
  <table class="page-block-header">
    <tr>
        <td class="page-block-title">
          <h2 class="block-title"><%= t(:label_irm_group_show) %>&nbsp;<%= t(:label_detail_info) %></h2>
        </td>
        <td class="page-block-button">
          <%= link_to t(:edit), {:action => "edit", :id => @group},:class=>"btn btn-primary" %>
          <%= link_to t(:new), {:action => "new"},:class=>"btn"%>
          <%= link_to t(:back), {:action => "index"},:class=>"btn"%>
        </td>
    </tr>
  </table>
  <!-- 一般信息 -->
  <table class="page-block-header">
    <tr>
      <td class="page-block-title"><h2 class="block-title"><%= t(:label_common_info) %>:</h2></td>
    </tr>
  </table>
  <div class="page-block-body">
    <table class="show-table">
      <tbody>
          <tr>
            <td class="label-col"><label><%=(t :label_irm_group_group_code)%></label></td>
            <td class="data-col"><%=@group.code%></td>
            <td class="label-col empty">&nbsp;</td>
            <td class="data-col empty">&nbsp;</td>
          </tr>
          <tr>
            <td class="label-col"><label><%=(t :label_irm_group_name)%></label></td>
            <td class="data-col"><%=@group[:name]%></td>
            <td class="label-col empty">&nbsp;</td>
            <td class="data-col empty">&nbsp;</td>
          </tr>

          <tr>
            <td class="label-col"><label><%=(t :label_irm_group_parent)%></label></td>
            <td class="data-col"><%=@group[:parent_group_name]%></td>
            <td class="label-col empty">&nbsp;</td>
            <td class="data-col empty">&nbsp;</td>
          </tr>
          <tr>
            <td class="label-col"><label><%=(t :label_irm_group_description)%></label></td>
            <td class="data-col" colspan="3" style="width:82%"><%=@group[:description]%></td>
          </tr>
      </tbody>
    </table>
  </div>
</div>

<!--页面结构-->
<div class="page-block">
  <table class="page-block-header"><tr>
    <td class="page-block-title">
      <h2 class="block-title"><%=t(:label_irm_group_member)%></h2>
    </td>
    <td class="page-block-button">
      <%= link_to t(:label_irm_group_add_person), {:controller=>"irm/group_members",:action => "new",:id=>@group.id},:class=>"btn" %>
    </td>
    <td class="page-block-help">
      <div id="permissionsSearchBox"></div>
    </td>
  </tr></table>
  <div class="page-block-body">
    <div id="person">
      <%= datatable("person",{:controller=>"irm/group_members",:action=>"get_data",:id=>@group.id},[],{:paginator_box=>"personPaginator"})%>
    </div>
    <div id="personPaginator"></div>
  </div>
</div>
<%=render :partial=>"multilingual/show",:locals=>{:main_data=>@group} %>

