<%= datatable_view({:count => @count1, :datas => @datas1}) do |builder| %>
    <% builder.column(:id, {:title => "<input type=\"checkbox\" id=\"selectAll\"/>"+t(:selectAll), :width => "40px"}) do |data| %>
        <input type="checkbox" name="valueIds" value="<%= data[:login_name] %>"/>
    <% end %>
    <% builder.column(:login_name, {:title => t(:login_name), :width => "200px"}) %>
    <% builder.column(:user_name, {:title => t(:user_name), :width => "200px"}) %>
    <% builder.column(:mail, {:title => t(:mail), :width => "200px"}) %>
<% end %>

<script type="text/javascript">
    $(document).ready(function () {
        $("#selectAll").bind("click", function () {
            if ($("#selectAll")[0].checked) {
                var checkboxes = $("input[name='valueIds']").toArray()
                for (var checkbox in checkboxes) {
                    checkboxes[checkbox].checked = true;
                }
            } else {
                var checkboxes = $("input[name='valueIds']").toArray()
                for (var checkbox in checkboxes) {
                    checkboxes[checkbox].checked = false;
                }
            }
        });
    });
</script>