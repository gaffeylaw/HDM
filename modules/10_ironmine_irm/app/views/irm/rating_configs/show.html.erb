<%= common_title(:show_data=>@rating_config[:name]) %>
<!--页面结构-->
<div class="show-block">
  <table class="page-block-header"><tr>
    <td class="page-block-title">
      <h2 class="block-title"><%=t(:label_irm_rating_config)%></h2>
    </td>
    <td class="page-block-button">
      <%= link_to t(:edit), {:action => "edit", :id => @rating_config},:class=>"btn"%>
      <%= link_to t(:back), {:action => "index"},:class=>"btn" %>
    </td>
  </tr></table>
  <div class="page-block-body">
    <table class="show-table">
      <tbody>
          <tr>
            <td class="label-col"><label ><%=t(:code)%></label></td>
            <td class="data-col"><div><%= @rating_config.code %></div></td>
            <td class="label-col empty"><div>&nbsp;</div></td>
            <td class="data-col empty"><div>&nbsp;</div></td>
          </tr>
          <tr>
            <td class="label-col"><label ><%=t(:name)%></label></td>
            <td class="data-col"><div><%= @rating_config[:name] %></div></td>
            <td class="label-col empty"><div>&nbsp;</div></td>
            <td class="data-col empty"><div>&nbsp;</div></td>
          </tr>
          <tr>
            <td class="label-col"><label ><%=t(:description)%></label></td>
            <td class="data-col" colspan="3" style="width:82%"><div><%= @rating_config.description %></div></td>
          </tr>
          <tr>
            <td class="label-col"><label ><%=t(:label_irm_rating_config_grade)%></label></td>
            <td class="data-col" colspan="3" style="width:82%">
              <div>
                <% @rating_config.rating_config_grades.each do |grade| %>
                    <% next unless grade[:name].present? %>
                  <div><%= grade[:grade] %>:<%= grade[:name] %><%= "(#{grade[:description]})" if grade[:description].present? %></div>
                <% end %>
              </div>
            </td>
          </tr>
      </tbody>
    </table>
  </div>
</div>
