<%= form_for(@operation_unit,:url=>{:action=>"create"},:builder => CustomFormBuilder) do |f| %>
  <% content_for :form_block_common   do%>
    <table class="form-table">
      <tbody>
          <tr>
            <td class="label-col"><label for="operation_unit_name"><%=t(:label_irm_operation_unit_name)%></label></td>
            <td class="data-col"><%=f.text_field :name, :required=>true ,:id=>"operation_unit_name"%></td>
            <td class="label-col empty">&nbsp;</td>
            <td class="data-col empty">&nbsp;</td>
          </tr>
          <tr>
            <td class="label-col"><label for="operation_unit_short_name"><%=t(:label_irm_operation_unit_short_name)%></label></td>
            <td class="data-col"><%=f.text_field :short_name, :required=>true ,:id=>"operation_unit_short_name"%></td>
            <td class="label-col empty">&nbsp;</td>
            <td class="data-col empty">&nbsp;</td>
          </tr>
          <tr>
            <td class="label-col"><label for="operation_unit_license"><%=t(:label_irm_operation_unit_license)%></label></td>
            <td class="data-col"><%=f.blank_select :license_id,available_license,{}, :required=>true ,:id=>"operation_unit_license"%></td>
            <td class="label-col empty">&nbsp;</td>
            <td class="data-col empty">&nbsp;</td>
          </tr>
          <tr>
            <td class="label-col"><label for="operation_unit_default_language_code"><%=t(:label_irm_operation_unit_default_language_code)%></label></td>
            <td class="data-col"><%= f.select(:default_language_code, options_for_select(selectable_languages,@operation_unit.default_language_code),{}, :required=>true ,:id=>"operation_unit_default_language_code") %></td>
            <td class="label-col empty">&nbsp;</td>
            <td class="data-col empty">&nbsp;</td>
          </tr>
          <tr>
            <td class="label-col"><label for="operation_unit_default_time_zone_code"><%=t(:label_irm_operation_unit_default_time_zone_code)%></label></td>
            <td class="data-col"><%=f.select :default_time_zone_code,options_for_select(available_timezone,@operation_unit.default_time_zone_code),{}, :required=>true ,:id=>"operation_unit_default_time_zone_code"%></td>
            <td class="label-col empty">&nbsp;</td>
            <td class="data-col empty">&nbsp;</td>
          </tr>
          <tr>
            <td class="label-col"><label for="application_description"><%=t(:label_irm_operation_unit_description)%></label></td>
            <td class="data-col" colspan="3" width="82%"><%=f.text_area :description,:rows=>4,:cols=>60 ,:id=>"application_description",:class=>"input-xlarge"%></td>
          </tr>
      </tbody>
    </table>
  <% end %>
  <% content_for :form_buttons  do %>
    <%= link_submit t(:save),{:class=>"btn btn-primary"}%>
    <%= link_to t(:cancel), {:action=>"index"}, {:class => "btn cancel"}%>
  <% end %>

  <!--页面结构-->
  <div class="page-block">
    <table class="page-block-header">
      <tr>
        <td class="page-block-title">
          <h2 class="block-title"><%=t(:label_irm_operation_unit_new)%></h2>
        </td>
        <td class="page-block-button">
          <%= content_for :form_buttons   %>
        </td>
      </tr>
    </table>
    <div class="page-block-body">
      <%= error_for @operation_unit %>
      <div class="sub-page-block">
        <!-- 一般信息 -->
        <div class="sub-page-block-header">
          <%= form_require_info %>
          <h3 class="sub-page-block-title"><%= t(:label_common_info) %></h3>
        </div>
        <div class="sub-page-block-body">
          <%= content_for :form_block_common   %>
        </div>
      </div>
    </div>
    <table class="page-block-footer">
      <tr>
        <td class="page-block-title"></td>
        <td class="page-block-button">
          <%= content_for :form_buttons   %>
        </td>
      </tr>
    </table>
  </div>
<% end %>
