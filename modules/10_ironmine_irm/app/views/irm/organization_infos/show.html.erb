<%= page_title %>

<!--页面结构-->
<div class="show-block">
  <table class="page-block-header"><tr>
    <td class="page-block-title">
      <h2 class="block-title"><%= t(:label_irm_organization_info) %></h2>
    </td>
    <td class="page-block-button">
      <%= link_to t(:edit), {:action => "edit", :id => @organization_info},:class=>"btn btn-primary"%>
      <%= link_to t(:back), {:action => "index"},:class=>"btn" %>
    </td>
  </tr></table>
  <div class="page-block-body">
    <table class="show-table">
      <tbody>
          <tr>
              <td class="label-col"><label ><%=t(:label_irm_organization_info_name)%></label></td>
              <td class="data-col"><label><%= @organization_info.name %></label></td>
              <td class="label-col empty"><div>&nbsp;</div></td>
              <td class="data-col empty"><div>&nbsp;</div></td>
          </tr>
          <tr>
              <td class="label-col"><label ><%=t(:label_irm_organization_info_value)%></label></td>
              <td class="data-col"><div><%= @organization_info.value %></div></td>
              <td class="label-col empty"><div>&nbsp;</div></td>
              <td class="data-col empty"><div>&nbsp;</div></td>
          </tr>
          <tr>
              <td class="label-col"><label ><%=t(:label_irm_organization_info_file)%></label></td>
              <td class="data-col"><div><%= filename(@organization_info[:attachment_id]) %></div></td>
              <td class="label-col empty"><div>&nbsp;</div></td>
              <td class="data-col empty"><div>&nbsp;</div></td>
          </tr>
          <tr>
              <td class="label-col"><label ><%=t(:label_irm_organization_info_description)%></label></td>
              <td class="data-col"><div><%= @organization_info.description %></div></td>
              <td class="label-col empty"><div>&nbsp;</div></td>
              <td class="data-col empty"><div>&nbsp;</div></td>
          </tr>
      </tbody>
    </table>
  </div>
</div>

