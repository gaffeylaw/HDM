<div class="listRelatedObject setupBlock">
    <div class="page-block">
      <div class="pbHeader">
        <table cellpadding="0" cellspacing="0" border="0">
          <tbody>
            <tr>
              <td class="pbTitle"><h2 class="mainTitle"><%= t(:label_irm_permission_list) %></h2></td>
              <td id="topButtonRow" class="pbButton">
                <div class="button"><%= link_to t(:new), {:controller => "irm/permissions", :action => "new"}%></div>
              </td>
              <td class="pbHelp">
              </td>
            </tr>
          </tbody>
        </table>
      </div>
      <div class="pbBody">
        <div id="permissions_list" class="datatable" style="width:100%">
          <div id="id" style="display:none">
            <%= link_to(t(:edit),{:controller => "irm/permissions", :action=>"edit",:id=>"{id}"}) %>&nbsp;&nbsp;<%= link_to(t(:show),{:controller => "irm/permissions", :action=>"show",:id=>"{id}"}) %>
          </div>
          <div id="status_code" style="display:none">
            <%= check_img("{status_code}") %>
          </div>          
        </div>
        <%= datatable("permissions_list",{:controller => "irm/permissions", :action=>"get_data",:format=>"json"},
                      [{:key=>"id",:label=>t(:operation),:formatter=>"Y.irm.template",:width=>"80px"},
                       {:key=>"product_module_name",:label=>t(:label_irm_permission_product_name)},
                       {:key=>"permission_code",:label=>t(:label_irm_permission_permission_code), :width => "20%"},
                       {:key=>"name",:label=>t(:label_irm_permission_name), :width => "30%"},
                       {:key=>"page_controller",:label=>t(:label_irm_permission_page_controller)},
                       {:key=>"page_action",:label=>t(:label_irm_permission_page_action)},
                       {:key=>"status_code",:label=>t(:active),:formatter=>"Y.irm.template", :width => "40px"}])%>
      </div>
    </div>
</div>