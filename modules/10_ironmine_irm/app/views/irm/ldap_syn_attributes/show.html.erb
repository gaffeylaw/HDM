<%= page_title %>
<!--页面结构-->
<div class="show-block">
  <table class="page-block-header">
    <tr>
        <td class="page-block-title">
          <h2 class="block-title"><%= t(:label_irm_ldap_syn_attribute) %></h2>
        </td>
        <td class="page-block-button">
          <%= link_to(t(:edit),{:controller => "irm/ldap_syn_attributes", :action => "edit", :ah_id => @ldap_syn_attribute.ldap_syn_header_id,:id=>@ldap_syn_attribute.id},:class=>"btn") %>
          <%= link_to(t(:back),{:controller => "irm/ldap_syn_headers", :action => "show", :id =>  @ldap_syn_attribute.ldap_syn_header_id},:class=>"btn") %>
        </td>
    </tr>
  </table>
  <!-- 一般信息 -->
  <table class="page-block-header">
    <tr>
      <td class="page-block-title"><h2 class="block-title"><%= t(:label_common_info) %>:</h2></td>
    </tr>
  </table>
  <div class="page-block-body">
    <table class="show-table">
      <tbody>
         <tr>
            <td class="label-col"><label ><%=t(:label_irm_ldap_syn_attribute_local_attr)%></label></td>
            <td class="data-col"><div><%= @ldap_syn_attribute.local_attr %></div></td>
            <td class="label-col"><label ><%=t(:label_irm_ldap_syn_attribute_ldap_attr_type)%></label></td>
            <td class="data-col"><div><%= @ldap_syn_attribute.value_type_name %></div></td>
          </tr>
          <tr>
            <td class="label-col"><label ><%=t(:label_irm_ldap_syn_attribute_ldap_attr)%></label></td>
            <td class="data-col"><div><%= @ldap_syn_attribute.ldap_attr %></div></td>
            <td class="label-col"><label ><%=t(:label_irm_ldap_syn_attribute_null_able)%></label></td>
            <td class="data-col"><div><%= @ldap_syn_attribute.null_able %></div></td>
          </tr>
         <tr>
            <td class="label-col"><label ><%=t(:label_irm_ldap_syn_attribute_description)%></label></td>
            <td class="data-col"><div><%= @ldap_syn_attribute.description %></div></td>
             <td class="label-col empty">&nbsp;</td>
            <td class="data-col empty">&nbsp;</td>
         </tr>
      </tbody>
    </table>
  </div>
</div>