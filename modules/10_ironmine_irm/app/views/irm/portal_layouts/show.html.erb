<%= common_title(:show_data=>@irm_portal_layout[:name]) %>
<!--页面结构-->
<div class="show-block">
  <table class="page-block-header"><tr>
    <td class="page-block-title">
      <h2 class="block-title"><%=t(:label_irm_portal_layout)%></h2>
    </td>
    <td class="page-block-button">
      <%= link_to t(:edit), {:action => "edit", :id => @irm_portal_layout},:class=>"btn"%>
      <%= link_to t(:back), {:action => "index"},:class=>"btn" %>
    </td>
  </tr></table>
  <div class="page-block-body">
    <table class="show-table">
      <tbody>
          <tr>
            <td class="label-col"><label ><%=t(:label_irm_portal_layout_name)%></label></td>
            <td class="data-col"><div><%= @irm_portal_layout[:name] %></div></td>
            <td class="label-col empty"><div>&nbsp;</div></td>
            <td class="data-col empty"><div>&nbsp;</div></td>
          </tr>
          <tr>
            <td class="label-col"><label ><%=t(:label_irm_portal_layout_format)%></label></td>
            <td class="data-col"><div><%= @irm_portal_layout[:layout] %></div></td>
            <td class="label-col empty"><div>&nbsp;</div></td>
            <td class="data-col empty"><div>&nbsp;</div></td>
          </tr>

          <tr>
            <td class="label-col"><label ><%=t(:default_flag)%></label></td>
            <td class="data-col"><div><%= check_img(@irm_portal_layout[:default_flag]) %></div></td>
            <td class="label-col empty"><div>&nbsp;</div></td>
            <td class="data-col empty"><div>&nbsp;</div></td>
          </tr>
          <tr>
            <td class="label-col"><label ><%=t(:label_irm_portal_layout_description)%></label></td>
            <td class="data-col" colspan="3" style="width:82%"><div><%= @irm_portal_layout[:description] %></div></td>
          </tr>
      </tbody>
    </table>
  </div>
</div>

<%=render :partial=>"multilingual/show",:locals=>{:main_data=>@irm_portal_layout} %>