<%= common_title(:show_data=>@application[:name]) %>
<!--页面结构-->
<div class="show-block">
  <table class="page-block-header"><tr>
    <td class="page-block-title">
      <h2 class="block-title"><%=t(:label_irm_menu)%></h2>
    </td>
    <td class="page-block-button">
      <%= link_to t(:edit), {:action => "edit", :id => @application},:class=>"btn"%>
      <%= link_to t(:back), {:action => "index"},:class=>"btn" %>
    </td>
  </tr></table>
  <div class="page-block-body">
    <table class="show-table">
      <tbody>
          <tr>
            <td class="label-col"><label ><%=t(:label_irm_application_code)%></label></td>
            <td class="data-col"><div><%= @application.code %></div></td>
            <td class="label-col empty"><div>&nbsp;</div></td>
            <td class="data-col empty"><div>&nbsp;</div></td>
          </tr>
          <tr>
            <td class="label-col"><label ><%=t(:label_irm_application_name)%></label></td>
            <td class="data-col"><div><%= @application[:name] %></div></td>
            <td class="label-col empty"><div>&nbsp;</div></td>
            <td class="data-col empty"><div>&nbsp;</div></td>
          </tr>
          <tr>
            <td class="label-col"><label ><%=t(:label_irm_application_tabs)%></label></td>
            <td class="data-col" colspan="3" style="width:82%">
              <div>
                <%tabs =  @application.tabs.multilingual%>
                <% tabs.each do |tab| %>
                  <div><%= tab[:name] %></div>
                <% end %>
              </div>
            </td>
          </tr>
          <tr>
            <td class="label-col"><label ><%=t(:label_irm_application_default_tab)%></label></td>
            <td class="data-col"><div><%= t = tabs.detect{|i| i.id.eql?(application_default_tab_id(@application))}; t[:name] if t %></div></td>
            <td class="label-col empty"><div>&nbsp;</div></td>
            <td class="data-col empty"><div>&nbsp;</div></td>
          </tr>
          <tr>
            <td class="label-col"><label ><%=t(:label_irm_tab_description)%></label></td>
            <td class="data-col" colspan="3" style="width:82%"><div><%= @application.description %></div></td>
          </tr>
      </tbody>
    </table>
  </div>
</div>
<%=render :partial=>"multilingual/show",:locals=>{:main_data=>@application} %>
