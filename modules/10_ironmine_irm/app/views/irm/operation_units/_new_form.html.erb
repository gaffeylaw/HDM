<%= form_for(@operation_unit,:url=>{:action=>"create"},:builder => CustomFormBuilder) do |f| %>
  <% content_for :form_block_common   do%>
    <table class="form-table">
      <tbody>
          <tr>
            <td class="label-col"><label for="operation_unit_name"><%=t(:label_irm_operation_unit_name)%></label></td>
            <td class="data-col"><%=f.text_field :name, :required=>true ,:id=>"operation_unit_name"%></td>
            <td class="label-col empty">&nbsp;</td>
            <td class="data-col empty">&nbsp;</td>
          </tr>
          <tr>
            <td class="label-col"><label for="operation_unit_short_name"><%=t(:label_irm_operation_unit_short_name)%></label></td>
            <td class="data-col"><%=f.text_field :short_name, :required=>true ,:id=>"operation_unit_short_name"%></td>
            <td class="label-col empty">&nbsp;</td>
            <td class="data-col empty">&nbsp;</td>
          </tr>
          <tr>
            <td class="label-col"><label for="operation_unit_default_language_id"><%=t(:label_irm_operation_unit_default_language_code)%></label></td>
            <td class="data-col"><%=f.text_field :default_language_id, :required=>true ,:id=>"operation_unit_default_language_id"%></td>
            <td class="label-col empty">&nbsp;</td>
            <td class="data-col empty">&nbsp;</td>
          </tr>
           <tr>
            <td class="label-col"><label for="operation_unit_default_time_zone_code"><%=t(:label_irm_operation_unit_default_time_zone_code)%></label></td>
            <td class="data-col"><%=f.text_field :default_time_zone_code, :required=>true ,:id=>"operation_unit_default_time_zone_code"%></td>
            <td class="label-col empty">&nbsp;</td>
            <td class="data-col empty">&nbsp;</td>
          </tr>
      </tbody>
    </table>
  <% end %>
  <% content_for :form_buttons  do %>
    <%= link_submit t(:save),{:class=>"btn btn-primary"}%>
    <%= link_back t(:cancel),{},{:class=>"btn cancel"}%>
  <% end %>

  <!--页面结构-->
  <div class="page-block">
    <table class="page-block-header"><tr>
      <td class="page-block-title">
        <h2 class="block-title"><%=t(:label_irm_operation_unit_new)%></h2></h2>
      </td>
      <td class="page-block-button">
        <%= content_for :form_buttons   %>
      </td>
    </tr></table>
    <%= error_for @operation_unit %>
    <div class="page-block-body">
      <div class="sub-page-block">
        <div class="sub-page-block-header">
          <%= form_require_info %>
          <h3 class="sub-page-block-title"><%= t(:label_common_info) %></h3>
        </div>
        <div class="sub-page-block-body">
          <%= content_for :form_block_common   %>
        </div>
      </div>

    </div>

    <table class="page-block-footer"><tr>
      <td class="page-block-title">
      </td>
      <td class="page-block-button">
        <%= content_for :form_buttons   %>
      </td>
    </tr></table>
  </div>

<% end %>