<%= form_for(@report,:url=>{:action=>"new"},:builder => CustomFormBuilder) do |f| %>
<%= f.hidden_field(:step) %>
  <% content_for :form_block_common do %>
    <table class="form-table">
      <tbody>
        <tr>
          <td class="label-col empty">&nbsp;</td>
          <td class="data-col empty">&nbsp;</td>
          <td class="label-col empty">&nbsp;</td>
          <td class="data-col empty">&nbsp;</td>
        </tr>
        <tr>
           <td class="label-col">
             <label for="duelType"><%=t(:label_irm_wf_rule_action_type)%></label>
           </td>
           <td class="data-col" colspan="3">
             <%= render :partial => "irm/duel_select/tmpl",:locals => {:f=>f,:types=>available_report_sections(@report.report_type_id),:sources=>available_report_fields(@report.report_type_id),:str_value_field=>:report_columns_str,:str_value=>@report.report_columns_str,:size=>14,:order=>true} %>
           </td>
        </tr>
        <tr>
          <td class="label-col empty">&nbsp;</td>
          <td class="data-col"><%= f.check_box(:detail_display_flag) %><label><%= t(:label_irm_report_detail_display_flag)%></label></td>
          <td class="label-col empty">&nbsp;</td>
          <td class="data-col empty">&nbsp;</td>
        </tr>
      </tbody>
    </table>    
  <% end %>

  <% content_for :form_buttons  do %>
     <%= link_to t(:last), {:action => "new",:pre_step=>true},{:class=>"btn submit"} %>
    <%= link_submit t(:next),:class=>"btn btn-primary"%>
    <%= link_to t(:cancel), {:action => "index"},:class => "btn cancel" %>
  <% end %>

  <!--页面结构-->
  <div class="page-block">
    <table class="page-block-header">
      <tr>
          <td class="page-block-title">
            <h2 class="block-title"><%= t(:step_n, :n => @report.step.to_s) %><%= report_page_step_title[@report.step.to_i] %></h2>
          </td>
          <td class="page-block-button">
            <%= content_for :form_buttons   %>
          </td>
          <td class="page-block-help">
            <%= t(:step_n_total_m, :n => @report.step.to_s, :m => "5") %>
          </td>
        </tr>
    </table>
    <%= error_for @report%>
    <div class="page-block-body">
      <div class="sub-page-block">
        <div class="sub-page-block-header">
          <%= form_require_info %>
          <h3 class="sub-page-block-title"><%= t(:label_irm_report_choose_display_column) %></h3>
        </div>
        <div class="sub-page-block-body">
          <%= content_for :form_block_common %>
        </div>
      </div>
    </div>

    <table class="page-block-footer">
      <tr>
        <td class="page-block-title"></td>
        <td class="page-block-button">
          <%= content_for :form_buttons   %>
        </td>
      </tr>
    </table>
  </div>
<% end %>
