<div style="background-color: #fff; width: 300px; height:200px;padding: 10px;">
  <div style="margin-left:5px;margin-right:5px;margin-bottom:5px">
    <%= text_field_tag "search_option_input", t(:input_keyword_you_want_to_search) , :onfocus => "if (value =='#{t(:input_keyword_you_want_to_search)}'){value =''}", :class => "grayTips", :style => "width:100%" %></div>
  <fieldset>
  <table style="font-size:12px">
    <tr><td><%= check_box_tag("search_option_all") %>
      <label for="search_option_all"><%= t :all %></label>
      </td>
    </tr>
    <tr><td><%= check_box_tag("search_option_skm_entry") %>
      <label for="search_option_skm_entry"><%= t :label_skm_entry_header %></label>
      </td>
    </tr>
    <tr><td><%= check_box_tag("search_option_icm_incident_request") %>
      <label for="search_option_icm_incident_request"><%= t :label_icm_incident_request %></label>
      </td>
    </tr>
  </table>
  </fieldset>
  <table style="width:100%">
    <tr>
      <td>
        <div class="button" style="margin-left:30%;padding-top:10px;">
        <a href="javascript:void(0);"><%= t(:search) %></a>
        <a href="javascript:void(0);"><%= t(:cancel) %></a>
        </div>
      </td>
    </tr>
  </table>
</div>