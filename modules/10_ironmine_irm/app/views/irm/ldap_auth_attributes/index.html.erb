<%= page_title %>
<div class="listRelatedObject setupBlock">
    <div class="page-block">
      <div class="pbHeader">
        <table cellpadding="0" cellspacing="0" border="0">
          <tbody>
            <tr>
              <td class="pbTitle"><h2 class="mainTitle"><%= t(:label_ldap_auth_attribute_list) %></h2></td>
              <td id="topButtonRow" class="pbButton">
                <div class="button"><%= link_to t(:new), {:action => "new"}%></div>
              </td>
              <td class="pbHelp">
                <div id="ldap_auth_attributesSearchBox"></div>
              </td>
            </tr>
          </tbody>
        </table>
      </div>
      <div class="pbBody">
        <div id="ldap_auth_attributes" class="datatable" style="width:100%">
          <div id="id" style="display:none">
            <%= link_to(t(:edit),{:action=>"edit",:id=>"{id}"}) %>|<%= link_to(t(:show),{:action=>"show",:id=>"{id}"}) %>
          </div>
        </div>
        <%= datatable("ldap_auth_attributes",{:action=>"get_data",:format=>"json"},
                      [{:key=>"id",:label=>t(:operation),:formatter=>"Y.irm.template",:width=>"70px"},
                                              { :key => "local_attr", :label => t(:ldap_auth_attribute_local_attr),:searchable=>true },
                                              { :key => "attr_type", :label => t(:ldap_auth_attribute_attr_type),:searchable=>true },
                                              { :key => "ldap_attr", :label => t(:ldap_auth_attribute_ldap_attr),:searchable=>true },
                                              { :key => "description", :label => t(:ldap_auth_attribute_description),:searchable=>true },
                                              { :key => "status_code", :label => t(:ldap_auth_attribute_status_code),:searchable=>true }
                                              ],{:row_perpage=>20,:search_box=>"ldap_auth_attributesSearchBox"})%>
      </div>
    </div>
</div>


