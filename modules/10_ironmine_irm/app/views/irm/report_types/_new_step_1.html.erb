<%= form_for(@report_type,:url=>{:action=>"new"},:builder => CustomFormBuilder) do |f| %>


  <% content_for :form_block_a   do%>
    <%= f.hidden_field(:step) %>
    <table class="form-table">
      <tbody>
          <tr>
            <td class="label-col"><label for="report_type_business_object_id"><%=t(:label_irm_report_type_business_object)%></label></td>
            <td class="data-col"><%=f.blank_select :business_object_id,available_business_object_with_id,{},:required=>true ,:id=>"report_type_business_object_id"%></td>
            <td class="label-col empty">&nbsp;</td>
            <td class="data-col empty">&nbsp;</td>

          </tr>
          <tr>
            <td class="label-col"><label for="report_type_category_id"><%=t(:label_irm_report_type_category)%></label></td>
            <td class="data-col"><%=f.blank_select :category_id,available_report_type_category,{},:required=>true ,:id=>"report_type_category_id"%></td>
            <td class="label-col empty">&nbsp;</td>
            <td class="data-col empty">&nbsp;</td>
          </tr>
      </tbody>
    </table>
  <% end %>

  <% content_for :form_block_b   do%>
    <table class="form-table">
      <tbody>
          <tr>
            <td class="label-col"><label for="report_type_code"><%=t(:label_irm_report_type_code)%></label></td>
            <td class="data-col"><%=f.text_field :code, :required=>true ,:irm_uppercase=>true,:id=>"report_type_code",:irm_uppercase=>true%></td>
            <td class="label-col empty">&nbsp;</td>
            <td class="data-col empty">&nbsp;</td>
          </tr>
          <tr>
            <td class="label-col"><label for="report_type_name"><%=t(:label_irm_report_type_name)%></label></td>
            <td class="data-col"><%=f.text_field :name, :required=>true ,:id=>"report_type_name"%></td>
            <td class="label-col empty">&nbsp;</td>
            <td class="data-col empty">&nbsp;</td>
          </tr>
          <tr>
            <td class="label-col"><label for="report_type_description"><%=t(:label_irm_report_type_description)%></label></td>
            <td class="data-col" colspan="3" width="82%"><%=f.text_area :description,:rows=>4,:id=>"report_type_description"%></td>
            <td class="label-col empty">&nbsp;</td>
            <td class="data-col empty">&nbsp;</td>
          </tr>
      </tbody>
    </table>
  <% end %>

  <% content_for :form_buttons  do %>
        <%= link_to t(:next), {:action => "new"},{:class=>"submit btn"} %>
        <%= link_to t(:cancel), {:controller => "irm/report_types",:action => "index"},:class=>"btn" %>
  <% end %>



    <!--页面结构-->
    <div class="page-block">
      <table class="page-block-header"><tr>
        <td class="page-block-title">
          <h2 class="block-title"><%= t(:step_n, :n => "1") %><%= t(:label_irm_report_type_define) %></h2>
        </td>
        <td class="page-block-button">
          <%= content_for :form_buttons   %>

        </td>
        <td class="page-block-help">
          <h2 class="block-title"><%= t(:step_n_total_m, :n => "1", :m => "2") %></h2>
        </td>
      </tr></table>
      <div class="page-block-body">
        <%= error_for @report_type%>
        <div class="sub-page-block">
          <div class="sub-page-block-header">
            <%= form_require_info %>
            <h3 class="sub-page-block-title"><%= t(:label_irm_report_type_business_object_select) %></h3>
          </div>
          <div class="sub-page-block-body">
            <%= content_for :form_block_a   %>
          </div>
        </div>
        <div class="sub-page-block">
          <div class="sub-page-block-header">
            <h3 class="sub-page-block-title"><%= t(:label_common_info) %></h3>
          </div>
          <div class="sub-page-block-body">
            <%= content_for :form_block_b   %>
          </div>
        </div>
      </div>

      <table class="page-block-footer"><tr>
        <td class="page-block-title">
        </td>
        <td class="page-block-button">
          <%= content_for :form_buttons   %>
        </td>
      </tr></table>
    </div>

<% end %>
