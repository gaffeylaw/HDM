<%= form_for(@wf_approval_process,:url=>{:action=>"new"},:builder => CustomFormBuilder) do |f| %>


  <% content_for :form_block_a   do%>
    <%= f.hidden_field(:step) %>
    <%=f.hidden_field(:evaluate_entry_mode,:value=>"FILTER")%>
    <% if @rule_filter %>
      <%= render "rule_filter" %>
    <% end %>
  <% end %>

  <% content_for :form_buttons  do %>
        <%= link_to t(:last), {:action => "new",:pre_step=>true},{:class=>"submit btn"} %>
        <%= link_submit t(:next),{:class=>"btn"} %>
        <%= link_back t(:cancel), {},:class=>"btn" %>
  <% end %>



  <!--页面结构-->
  <div class="page-block">
    <table class="page-block-header"><tr>
      <td class="page-block-title">
        <h2 class="block-title"><%= t(:step_n, :n => "2") %><%= t(:label_irm_wf_approval_process_filter) %></h2>
      </td>
      <td class="page-block-button">
        <%= content_for :form_buttons   %>

      </td>
      <td class="page-block-help">
        <h2 class="block-title"><%= t(:step_n_total_m, :n => "2", :m => "5") %></h2>
      </td>
    </tr></table>
    <div class="page-block-body">
      <%= error_for @wf_approval_process%>
      <div class="sub-page-block">
        <div class="sub-page-block-header">
          <%= form_require_info %>
          <h3 class="sub-page-block-title"></h3>
        </div>
        <div class="sub-page-block-body">
          <%= content_for :form_block_a   %>
        </div>
      </div>
    </div>

    <table class="page-block-footer"><tr>
      <td class="page-block-title">
      </td>
      <td class="page-block-button">
        <%= content_for :form_buttons   %>
      </td>
    </tr></table>
  </div>

<% end %>