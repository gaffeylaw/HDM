<div class="page-block">
  <table class="page-block-header"><tr>
    <td class="page-block-title">
      <h2 class="block-title"><%= t(:label_irm_wf_approval_action_ap_final_approval_actions) %></h2>
    </td>
    <td class="page-block-button">
      <% unless @wf_approval_process.enabled? %>
          <div class="btn-toolbar">
            <div class="btn-group">
              <%= link_to(t(:label_irm_wf_approval_process_add_exists_action),{:action => "add_exists_action",:source_str=>"AP_FINAL_APPROVAL,#{@wf_approval_process.id}"},:back=>true,:class=>"btn") %>
            </div>
            <div class="btn-group">
              <button data-toggle="dropdown" class="btn dropdown-toggle"><%= t(:label_irm_wf_approval_add_actions)  %><span class="caret"></span></button>
              <ul class="dropdown-menu">
                <li><%= link_to(t(:label_irm_wf_mail_alert_new),{:controller => "irm/wf_mail_alerts",:action => "new",:source_str=>"AP_FINAL_APPROVAL,#{@wf_approval_process.id}"},:back=>true) %></li>
                <li><%= link_to(t(:label_irm_wf_field_update_new),{:controller => "irm/wf_field_updates",:action => "new",:source_str=>"AP_FINAL_APPROVAL,#{@wf_approval_process.id}"},:back=>true) %></li>
              </ul>
            </div>
          </div>
      <% else %>
          <div class="btn-toolbar">
            <%= link_to(t(:label_irm_wf_approval_process_add_exists_action),{:action => "add_exists_action",:source_str=>"AP_FINAL_APPROVAL,#{@wf_approval_process.id}"},:back=>true,:class=>"btn",:disabled=>true) %>
          <div class="btn-group">
            <button data-toggle="dropdown" class="btn dropdown-toggle disabled"><%= t(:label_irm_wf_approval_add_actions)  %><span class="caret"></span></button>
            <ul class="dropdown-menu">
            </ul>
          </div>
          </div>
      <% end %>

    </td>
    <td class="page-block-help">
    </td>
  </tr></table>
  <div class="page-block-body">
    <%= render :partial => "show_process_actions",:locals => {:actions=>wf_process_actions("AP_FINAL_APPROVAL",@wf_approval_process.id)} %>
  </div>


</div>


