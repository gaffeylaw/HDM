<%= form_for(@wf_rule,:url=>{:action=>"new"},:builder => CustomFormBuilder) do |f| %>


  <% content_for :form_block_a   do%>
    <%= f.hidden_field(:step) %>
    <table class="form-table">
      <tbody>
        <tr>
          <td class="label-col"><label for="object_attribute_attribute_type"><%=t(:label_irm_wf_rule_bo_code)%></label></td>
          <td class="data-col"><%=f.blank_select :bo_code, available_workflow_business_object,:required=>true%></td>
          <td class="label-col empty">&nbsp;<%= f.hidden_field(:step) %></td>
          <td class="data-col empty">&nbsp;</td>
        </tr>
      </tbody>
    </table>
  <% end %>

  <% content_for :form_buttons  do %>
        <%= link_to t(:next), {:action => "new"},{:class=>"submit btn"} %>
        <%= link_to t(:cancel), nil,:class=>"btn" %>
  <% end %>



    <!--页面结构-->
    <div class="page-block">
      <table class="page-block-header"><tr>
        <td class="page-block-title">
          <h2 class="block-title"><%= t(:step_n, :n => "1") %><%= t(:label_irm_wf_rule_select_bo) %></h2>
        </td>
        <td class="page-block-button">
          <%= content_for :form_buttons   %>

        </td>
        <td class="page-block-help">
          <h2 class="block-title"><%= t(:step_n_total_m, :n => "1", :m => "2") %></h2>
        </td>
      </tr></table>
      <div class="page-block-body">
        <%= error_for @wf_rule%>
        <div class="sub-page-block">
          <div class="sub-page-block-header">
            <%= form_require_info %>
            <h3 class="sub-page-block-title"><%= t(:label_irm_report_type_business_object_select) %></h3>
          </div>
          <div class="sub-page-block-body">
            <%= content_for :form_block_a   %>
          </div>
        </div>
      </div>

      <table class="page-block-footer"><tr>
        <td class="page-block-title">
        </td>
        <td class="page-block-button">
          <%= content_for :form_buttons   %>
        </td>
      </tr></table>
    </div>

<% end %>
