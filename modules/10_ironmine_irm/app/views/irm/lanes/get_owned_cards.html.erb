<%=datatable_view({:count=>@count,:datas=>@datas}) do |builder|%>
  <% builder.column(:irm_card_id,{:title=>t(:operation), :width => "30px"}) do |data|%>
    <%= bootstrap_icons("icon-trash",t(:remove),{:controller=>"irm/lanes",:action=>"delete_card",:card_id=>data[:irm_card_id],:lane_id => params[:id]},:confirm => t(:label_are_you_sure) ,:method => :delete) %>
  <% end %>
  <% builder.column(:card_code,{:title=>t(:label_irm_card_code),:width => "150px"})%>
  <% builder.column(:card_name,{:title=>t(:name),:width => "150px"})%>
  <% builder.column(:card_description,{:title=>t(:description),:width => "200px"})%>
  <% builder.column(:background_color,{:title=>t(:label_irm_card_background_color)})%>
<% end %>