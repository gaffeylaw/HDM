<%%= common_title %>
<!--页面结构-->
<div class="show-block">
  <table class="page-block-header"><tr>
    <td class="page-block-title">
      <h2 class="block-title"><%%= t(:label_irm_<%= singular_name %>) %></h2>
    </td>
    <td class="page-block-button">
      <%%= link_to t(:edit), {:action => "edit", :id => @<%= singular_name %>},:class=>"btn"%>
      <%%= link_to t(:back), {:action => "index"},:class=>"btn" %>
    </td>
  </tr></table>
  <div class="page-block-body">
    <table class="show-table">
      <tbody>
        <% for attribute in attributes -%>
          <tr>
            <td class="label-col"><label ><%%=t(:label_irm_<%= singular_name %>_<%= attribute.name %>)%></label></td>
            <td class="data-col"><div><%%= @<%= singular_name %>.<%= attribute.name %> %></div></td>
            <td class="label-col empty"><div>&nbsp;</div></td>
            <td class="data-col empty"><div>&nbsp;</div></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
